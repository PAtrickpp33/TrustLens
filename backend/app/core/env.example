# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/trustlens?charset=utf8mb4

# CORS Configuration
ALLOW_ORIGINS=*

# ======== Gemini LLM Configuration (for URL/Email Address Analysis) ========
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
MAX_TOKENS=1024
TEMP=0.2
TH_HIGH=0.8
TH_MED=0.5
TH_LOW=0.1
THINKING_BUDGET=0

# ======== OpenAI GPT Configuration (for SMS/Email Content Analysis) ========
# Get your API key from: https://platform.openai.com/api-keys
# This is used for the new SMS/Email content analysis feature
OPENAI_API_KEY=your_openai_api_key_here

# Model options:
# - gpt-4o: Most capable, supports vision (recommended for image analysis)
# - gpt-4o-mini: Faster and cheaper, also supports vision
# - gpt-4-turbo: Previous generation, also capable
OPENAI_MODEL=gpt-4o

# Token limit for responses (default: 2048)
OPENAI_MAX_TOKENS=2048

# Temperature for randomness (0.0-2.0, default: 0.3)
# Lower = more focused and deterministic
# Higher = more creative and random
OPENAI_TEMPERATURE=0.3
